<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.taptake">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TapTake">
        <activity
            android:name=".PaymentScreen"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".SchedulingScreen"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".RestaurantScreen"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".LoginScreen"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".SignUpScreen"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".HomeScreen"
            android:exported="false"
            android:label="@string/title_activity_home_screen"
            android:launchMode="singleTask"
            android:theme="@style/Theme.TapTake.NoActionBar" />
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
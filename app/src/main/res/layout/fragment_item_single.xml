<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ItemFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewItem"
        android:layout_width="370dp"
        android:layout_height="149dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="2">


        <TextView
            android:id="@+id/textNameItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="10dp"
            android:text="@string/name_item"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textDescriptionItem"
            android:layout_width="252dp"
            android:layout_height="65dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="50dp"
            android:text="@string/descriptionitem" />

        <TextView
            android:id="@+id/textPriceItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="260dp"
            android:layout_marginTop="120dp"
            android:text="@string/valor_item" />

        <TextView
            android:id="@+id/priceItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="320dp"
            android:layout_marginTop="120dp"
            android:text="0,00" />

        <ImageView
            android:id="@+id/imageItem"
            android:layout_width="89dp"
            android:layout_height="91dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/imageitem"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

</FrameLayout>